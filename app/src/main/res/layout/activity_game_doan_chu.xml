<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fbf5f2"
    android:paddingTop="16dp"
    tools:context=".GameDoanChuActivity">

    <!-- Hiển thị level hiện tại -->
    <TextView
        android:id="@+id/tvLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Màn 1"
        android:textColor="#000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Hình ảnh cần đoán -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/tvLevel"
        android:layout_marginTop="20dp"
        android:scaleType="fitCenter" />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/wordFrame"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/imageView"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:minHeight="80dp"
        android:padding="8dp"
        app:alignItems="center"
        app:flexWrap="wrap"
        app:justifyContent="center" />

    <!-- ScrollView bao bọc các thẻ từ -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnCheck"
        android:layout_below="@id/wordFrame"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <!-- Container các thẻ từ (sử dụng FlexboxLayout) -->
        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/wordCardsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:flexWrap="wrap"
            app:alignItems="center"
            app:justifyContent="center" />
    </ScrollView>

    <!-- Nút kiểm tra -->
    <Button
        android:id="@+id/btnCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="KIỂM TRA"
        android:backgroundTint="#59cb01"
        android:layout_marginBottom="20dp"
        android:paddingHorizontal="32dp"
        android:textAllCaps="false"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/btn_Back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="124dp"
        android:layout_toStartOf="@+id/tvLevel"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Back button"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_arrow_back" />

</RelativeLayout>